{
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "@types"],
    "outDir": "dist",
    "target": "ES6",
    "lib": ["esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"],
  "include": ["**/*.ts"]
}

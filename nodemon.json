{
  "nodemonConfig": {
    "ignore": [".git", "node_modules"],
    "watch": ["lib", "index.ts"],
    "exec": "npm start",
    "execMap": {
      "ts": "node --require ts-node/register"
    },
    "env": {
      "NODE_ENV": "development",
      "DEBUG": "error,info,debug"
    },
    "ext": "ts"
  }
}
